{
  "name": "sheets-ide",
  "version": "1.0.0",
  "description": "Sheets IDE - AI-powered Google Sheets automation using Roo Code architecture",
  "main": "dist/server-final.js",
  "scripts": {
    "start": "node dist/server-final.js",
    "build": "tsc server-final.ts --outDir dist --target es2020 --module commonjs --esModuleInterop --allowSyntheticDefaultImports --skipLibCheck",
    "dev": "ts-node server-final.ts",
    "clean": "rm -rf dist && npm run build"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.30.1",
    "express": "^4.18.2",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "sheets",
    "google-sheets",
    "ai",
    "automation",
    "roo-code",
    "anthropic",
    "typescript"
  ],
  "author": "Sheets IDE Team",
  "license": "MIT"
}